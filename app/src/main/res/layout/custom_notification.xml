<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgBaiHat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/iconfloatingactionbutton"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:scaleType="fitXY" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:id="@+id/txtTenBaiHatNotification"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Ten bai hat"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/imgBaiHat"
        android:textSize="23dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTemCaSiBaiHatNotification"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imgBaiHat"
        android:layout_below="@id/txtTenBaiHatNotification"
        android:maxLines="1"
        android:textSize="18dp"
        android:textColor="#4A4848"
        android:text="Tran Van Hau"/>

    <ImageView
        android:id="@+id/notificationPlay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/notificationClose"
        android:src="@drawable/ic_baseline_pause_circle_outline_24" />
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:id="@+id/notificationClose"/>
</RelativeLayout>